/**app.wxss**/
@import 'miniprogram_npm/@vant/weapp/common/index.wxss';
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
      Segoe UI, Arial, Roboto, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft Yahei',
      sans-serif;
  --defaultBg: #2D4059;     
  --bgWhite: white;    
  --fontColor: #FF8E14;
  --buttonBgColor: #ec8c05; /* #ec8c05; */
  --priceColor: #ff6000; /* #f40 */ 
  --origin:#ec8c05;
  --red: #ff5455;
  --green: #07c160;
  --phoneColor: #3476ea;
}

image {
  height: auto;
}

.container {
  height: 100%;
  /* display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0; */
  box-sizing: border-box;
} 

.hidden {
  display: none;
}

.nav-bar--fixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  z-index: 1;
}

view {
  box-sizing: border-box;
}

image {
  display: block;
}

.box-shadow {
  box-shadow: -6rpx 6rpx 10rpx 2rpx #68686899;/*for Android*/
  -webkit-box-shadow:-3px 3px 5px 1px #68686899;/*for IOS*/
}

.line {
  height: 30rpx;
}

.price {
  color: var(--priceColor);
}

.van-goods-action {
  z-index: 100 !important;
}

.origin {
  color: var(--origin)
}

.green {
  color: var(--green);
}

.red {
  color: var(--red);
}

.list-loading {
  padding: 20px 0;
  text-align: center;
}


