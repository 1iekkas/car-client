/* userPackage/coupon/index.wxss */
page {
  background-color: #f7f7f7;
}

.content {
  padding: 30rpx 20rpx;
}

.coupon-body {

}

.coupon {
  padding: 40rpx 30rpx 40rpx 0 !important;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow:0 0 8rpx rgba(0, 0, 0, 0.1);
}

.coupon-head {
  color: #ee0a24;
  width: 192rpx;
  text-align: center;
}

.coupon-amount {
  font-size: 60rpx;
  margin-bottom: 8rpx;
}

.coupon-amount text {
  font-size: 28rpx;
  margin-left: 6rpx;
}

.coupon-condition {
  font-size: 24rpx;
  line-height: 32rpx;
  white-space: pre-wrap;
}

.coupon-info {
  text-align: left;
  padding: 0 30rpx
}

.coupon-name {
  font-size: 30rpx;
  color: #000;
}

.popup-action {
  padding: 30rpx 0;
  width: 90vw;
  margin: 0 auto;
}


