/* servicePackage/create/index.wxss */
page {
  background-color: #f7f7f7;
}

.container {
  height: 100vh;
  padding: 30rpx 0;
}

.car-item {
  width: 95vw;
  margin: 0 auto;
  background-color: white;
  border-radius: 8rpx;
  padding: 30rpx;
}

.car-item-body {
  display: flex;
}

.car-item-body.add {
  padding: 20rpx 0;
  align-items: center;
  justify-content: center;
  color: #646566;
}

.car-item-body.add van-icon {
  margin-right: 10rpx;
}

.car-info {
  padding-left: 10rpx;
  padding-bottom: 30rpx;
}

.car-brand {
  margin-bottom: 12rpx;
}

.car-params {
  color: #bbb;
  font-size: 24rpx;
}

.car-params .car-number {
  color: #232323;
  font-size: 32rpx;
  margin-bottom: 6rpx;
}

.car-item-action {
  color: #777;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.car-item-action van-icon {
  padding-left: 12rpx;
}

/**form */
.form {
  margin: 30rpx 0;
  background-color: white;
}

.form-title {
  color: #323232;
  font-size: 28rpx;
  padding: 20rpx 26rpx 20rpx 26rpx;
}

.upload {
  padding: 15rpx 22rpx 20rpx 22rpx;
}

/** */
.slot-title {
  color: #646566;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.slot-title van-checkbox {
  margin-right: 8rpx;
}

.submit-button {
  margin: 60rpx auto 0 auto;
  width: 90vw;
}

.servies {
  color: #646566;
  font-size: 24rpx;
  width: 100vw;
  padding: 60rpx 0;
  text-align: center;
}

.van-cell.padding {
  padding: 26rpx 16rpx 26rpx 26rpx;
}

van-field .van-field__label {
  color: #323233 !important;
}

.location .van-cell__title {
  color: #777 !important;
}

/** */
.popup-head {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx 40rpx 20rpx;
  justify-content: center;
  box-shadow:0 -2rpx 10rpx 2rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 2;
}

.popup-head .cancel {
  color: #ff5455;
  font-size: 28rpx;
  position: absolute;
  top: 34rpx;
  left: 30rpx;
}

.popup-body {
  background-color: #f7f7f7;
  height: calc(80vh - 53px - 50px);
}

.popup-group {
  width: 92vw;
  margin: 0 auto;
  padding: 30rpx 0;
}

.popup-body .car-item {
  width: 100%;
  position: relative;
}

.popup-body .car-item + .car-item {
  margin-top: 30rpx;
}

.popup-action .add-car{
  font-size: 28rpx;
  height: 50px;
  line-height: 50px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checked-icon {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.switch-upload {
  display: flex;
  align-items: center;
  justify-content: space-between;
}


