/* servicePackage/position/index.wxss */
#map {
  position: relative;
  z-index: 0;
}

#map .location-marker {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 52rpx;
  height: auto;
  z-index: 100;
}

.content {
  height: 50vh;
  padding-bottom: 20rpx;
}

.list {
  height: calc(50vh - 54px - 44px - 20rpx);
}

.button {
  width: 90vw;
  margin: 0 auto;
  /* padding-bottom: 30rpx; */
}

.address-group {
  /* padding: 30rpx 20rpx; */
}

/** */
.address-list {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
}

.address-list .info {
  flex: 1;
  padding:0 50rpx 0 30rpx;
  font-size: 28rpx;
}

.address-list .title {
  color: #232323;
  padding-bottom: 10rpx;
}

.address-list .address {
  color: rgb(168, 168, 168);
}

.address-group .active-icon {
  color: #fe9d00;
  font-size: 32rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}