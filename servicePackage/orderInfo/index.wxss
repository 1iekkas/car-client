.store-filter {
  font-size: 28rpx;
  width: 96vw;
  margin: 0 auto;
  padding: 20rpx 30rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  position: relative;
}

.store-filter .refresh {
  position: absolute;
  right: 30rpx;
  top: 24rpx;
}

.store-filter .filter-item+.filter-item {
  color: #232323;
  padding-left: 48rpx;
}

.store-filter .filter-item.active {
  color: #ee0a24;
}

.store-item {
  padding: 20rpx;
  background-color: white;
  margin-bottom: 10rpx;
}

.store-item:last-child {
  margin-bottom: 0;
}

.store-body {
  margin-bottom: 20rpx;
  display: flex;
}

.store-content {
  flex: 1;
  font-size: 28rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.store-content view + view {
  padding-top: 20rpx;
}

.store-content .remark {
  color: #999;
}

.store-content .pay {
  flex: 1;
  color: #646566;
  text-align: right;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: absolute;
  bottom: 0;
  right: 0;
  color: var(--red);
}

.store-address {
  padding-top: 20rpx;
  color: #bdbdbd;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.store-address .location {
  flex: 1;
  padding-right: 20rpx;
}

.store-address .location .range {
  display: flex;
  align-items: center;
}

.store-address .location .range .van-icon {
  margin-top: 2rpx;
}

van-goods-action-button {
  text-align: right;
}

van-goods-action-button button {
  width: 35vw !important;
}

.images-group {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.images-group van-image {
  margin-right: 10px;
}

.contact {
  width: 95vw;
  background-color: #fcfcfc;
  margin: 0 auto;
  padding: 20rpx 0;
  display: flex;
  border-radius: 0 0 12rpx 12rpx;
}

.contact .contact-item {
  flex: 1;
  color: #646566;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact .contact-item text {
  padding-left: 8rpx;
}

.content {
  color: #646566;
}

.content text:nth-child(2), .content text:nth-child(3) {
  color: var(--priceColor);
}

.content text:nth-child(2) {
  margin-left: 12rpx;
}

.content text:nth-child(3) {
  font-size: 38rpx;
}

.popup-head {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx 20rpx 20rpx;
}

.popup-head .popup-title {
  flex: 1;
  text-align: center;
}

.popup-head .popup-text {
  color: var(--red);
}

.popup-head .popup-text.cancel {
  color: #999;
}

.popup-group {
  padding: 40rpx 0 20rpx 0;
}

.empty-store {
  font-size: 28rpx;
  color: #646566;
  padding: 40rpx 0;
  background-color: white;
  text-align: center;
}

.cancel-order {
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background-color: white;
  font-size: 28rpx;
}

.cancel-order view {
  color: var(--red);
  flex: 0 0 50%;
  text-align: right;
}

