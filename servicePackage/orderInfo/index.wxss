.car-item {
  width: 100%;
  margin: 0 auto;
  background-color: white;
  border-radius: 8rpx;
  padding: 30rpx;
  position: relative;
}

.car-item::after, .car-item::before {
  content: '';
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #f7f7f7;
  bottom: -15rpx;
  z-index: 1;
}

.car-item::after {
  left: -15rpx;
  box-shadow: 6rpx 0 0 0 white;
}

.car-item::before {
  right: -15rpx;
  box-shadow: -6rpx 0 0 0 white;
}

.car-item-body {
  display: flex;
}

.car-item-body.add {
  padding: 20rpx 0;
  align-items: center;
  justify-content: center;
  color: #646566;
}

.car-item-body.add van-icon {
  margin-right: 10rpx;
}

.car-info {
  padding-left: 10rpx;
  padding-bottom: 30rpx;
}

.car-brand {
  margin-bottom: 12rpx;
}

.car-params {
  color: #bbb;
  font-size: 24rpx;
}

.car-params .car-number {
  color: #232323;
  font-size: 32rpx;
  margin-bottom: 6rpx;
}

.car-item-action {
  color: #777;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.car-item-action van-icon {
  padding-left: 12rpx;
}

.order-info .van-step {
  font-size: 28rpx;
  color: #969799 !important;
}

.order-info .van-step__wrapper {
  padding: 0 30rpx 0 20px !important;
}

.img-group {
  background-color: white;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.img-group .img {
  margin: 0 20rpx 20rpx 0;
}

