.nav-content {
  display: flex;
  align-items: center;
  position: relative;
}

.nav-content .icon {
  position: fixed;
  left: 30rpx;
  font-size: 40rpx;
}

.nav-content .location {
  flex: 1;
  color: var(--fontColor);
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-content .location .icon-down {
  font-size: 26rpx;
  margin-left: 8rpx;
}

#map {
  position: relative;
  z-index: 0;
}

#map .location-marker {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
}

#map .location-button {
  color: white;
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 60rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-51%, -145%);
  z-index: 2;
  background-color: #232323;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
}

