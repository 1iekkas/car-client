/**index.wxss**/
.nav-content {
  display: flex;
  align-items: center;
  position: relative;
}

.nav-content .icon {
  position: fixed;
  left: 30rpx;
  font-size: 40rpx;
}

.nav-content .location {
  flex: 1;
  color: var(--fontColor);
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-content .location .icon-down {
  font-size: 26rpx;
  margin-left: 8rpx;
}

#map {
  position: relative;
  z-index: 0;
}

#map .location-marker {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
}

.tabs-section {
  color: rgb(90, 90, 90);
  height: 90rpx;
  position: relative;
  z-index: 2;
}

.tabs-section--black {
  height: 120rpx;
  background-color: rgb(28, 31, 48);
  color: white;
}

.tabs-section--black .content {
  height: 120rpx;
}

.tabs-section .content {
  display: flex;
  align-items: center;
}

.tabs-section .content .tabs-item {
  font-size: 26rpx;
  flex: 0 0 18vw;
  text-align: center;
  line-height: 90rpx;
  position: relative;
}

.tabs-section .content .tabs-item.type-item {
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tabs-section .content .tabs-item.type-item image {
  margin-bottom: 10rpx;
}

.tabs-section .content .type-item.active::before {
  content:"";
  position: absolute;
  bottom: 0rpx;
  left: 50%;
  transform: translateX(-50%);
  border-bottom: 12rpx solid white;
  border-left: 16rpx solid transparent;
  border-right: 16rpx solid transparent;
  z-index: 100;
}

.tabs-section--black .content .tabs-item {
  height: 120rpx;
  line-height: inherit;
}

.tabs-section--flex {
  display: flex;
  align-items: center;
}

.tabs-section--flex .tabs-item:last-child {
  padding-right: 20rpx;
}

.tabs-section--flex .tabs-item.active {
  color: var(--fontColor);
}

.tabs-section--flex .search {
  flex: 0 0 12vw;
  height: 60rpx;
  padding: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fixed-btn {
  position: fixed;
  bottom: 20rpx;
  left: 8vw;
  right: 8vw;
  z-index: 100;
}

.fixed-search {
  position: fixed;
  top: 130rpx;
  left: 5vw;
  right: 5vw;
  z-index: 2;
}