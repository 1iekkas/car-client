/**index.wxss**/
.nav-content {
  display: flex;
  align-items: center;
  position: relative;
}

.nav-content .icon {
  position: fixed;
  left: 30rpx;
  font-size: 40rpx;
}

.nav-content .location {
  flex: 1;
  color: var(--fontColor);
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-content .location .icon-down {
  font-size: 26rpx;
  margin-left: 8rpx;
}

#map {
  position: relative;
  z-index: 0;
}

#map .location-marker {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 8rpx;
  height: 70rpx;
  background-color: var(--defaultBg);
  border-radius: 4rpx;
}

#map .location-button {
  color: white;
  font-size: 20rpx;
  padding: 12rpx 16rpx;
  min-height: 48rpx;
  /* line-height: 48rpx; */
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-51%, -145%);
  z-index: 100;
  background-color: var(--defaultBg);
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  max-width: 32vw;
}

.search-section {
  position: fixed;
  left: 5vw;
  right: 5vw;
  z-index: 2;
  border-radius: 6rpx;
  overflow: hidden;
  box-shadow:0 0rpx 10rpx 2rpx rgba(0, 0, 0, 0.1);/*for Android*/
  display: flex;
  align-items: center;
  background-color: white;
}

.search-section van-search {
  flex: 1;
}

.search-section .van-search {
  padding: 12rpx 18rpx;
}

.search-section .store-title {
  color: #656565;
  font-size: 24rpx;
  flex: 0 0 15vw;
  height: 46px;
  line-height: 46px;
}

.movable-area {
  width: 100vw;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
  height: 400rpx;
  background-color: transparent;
}

.movable-view {
  width: auto;
  height: auto;
}

.content {
  width: 100vw;
  height: auto;
  font-size: 28rpx;
  border-radius: 36rpx 36rpx 0 0;
  background-color: white;
  padding: 40rpx 30rpx 30rpx 30rpx;
  box-shadow:0 -2rpx 10rpx 2rpx rgba(0, 0, 0, 0.2);/*for Android*/
  /* overflow: hidden; */
}

.content .number {
  color: var(--fontColor);
}

.link-button {
  /* margin-top: 40rpx; */
  width: 80vw !important;
}

.nav-content {
  position: relative;
}

.avatar {
  position: absolute;
  top: 0;
  left: 0;
  width: 56rpx;
  height: 56rpx;
  border: 2rpx solid white;
  border-radius: 50%;
  box-shadow:0 2rpx 4rpx 2rpx rgba(0, 0, 0, 0.2);/*for Android*/
  overflow: hidden;
}

.avatar image {
  width: 56rpx;
  height: auto;
  /* border-radius: 50%; */
}

