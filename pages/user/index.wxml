<!--pages/user/index.wxml-->
<scroll-view class="van-hairline--top" scroll-y="true" style="height: 100vh">
    <view class="content" style="min-height: calc(100vh + 4rpx);">
      <view class="user-info-section">
        <view class="avatar">
          <block wx:if="{{!isLogin}}">
            <!-- <button class="auth-btn" open-type="getUserInfo" bindgetuserinfo="getUserInfo">
              <image src="../../static/img/avatar.png" mode="widthFix" style="width: 100%"></image>
            </button> -->
            <navigator class="auth-btn" hover-class="none" url="../../userPackage/login/index">
              <image src="../../static/img/avatar.png" mode="widthFix" style="width: 100%"></image>
            </navigator>
          </block>
          <block wx:else>
            <image src="{{userInfo.avatarUrl}}" mode="widthFix" style="width: 100%"></image>
          </block>
        </view>
        <view class="info">
          <block wx:if="{{isLogin}}">
            <text class="name">{{userInfo.nickName}}</text>
            <text wx:if="{{carCount}}">已绑定车辆：{{ carCount }}</text>
            <text wx:else>未绑定车辆</text>
          </block>
          <block wx:else>
            <text>请点击头像登录</text>
          </block>
        </view>
      </view>
      <!---->
      <view class="line"></view>
      <view class="tabs order-tabs">
        <view class="tabs-list">
          <view class="tabs-item" wx:for="{{tabs}}" wx:key="index">
            <view class="tabs-img"><image src="../../static/img/order.png" mode="widthFix" style="width: 46rpx;height: auto;"></image></view>
            <text>{{item}}</text>
          </view>
        </view>
        <view class="tabs-all van-hairline--left" bindtap="orderLink" data-id="0">
          <view class="tabs-img"><image src="../../static/img/order.png" mode="widthFix" style="width: 46rpx;height: auto;"></image></view>
          <text>全部</text>
        </view>
      </view>
      <!---->
      <view class="line"></view>
      <view class="cell-section">
        <van-cell-group border="{{ false }}">
          <van-cell custom-class="padding" title="车辆管理" value="" is-link url="/userPackage/userCar/index?from=user" />
          <van-cell custom-class="padding" title="钱包" value="" is-link />
          <van-cell custom-class="padding" title="优惠券" value="" is-link />
          <van-cell custom-class="padding" title="联系客服" value="" is-link />
          <van-cell custom-class="padding" title="资料设置" value="" is-link />
          <van-cell custom-class="padding" title="更多服务" value="" is-link border="{{ false }}" />
        </van-cell-group>
      </view>
      
    </view>
  </scroll-view>
