/* components/nav-bar/index.wxss */
.nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  box-shadow:0 -2rpx 10rpx 2rpx rgba(0, 0, 0, 0.2);
  z-index: 10;
  transition: all .3s linear;
}

.nav-main {
  width: 100%;
  height: 100%;
  position: relative;
}

.nav .capsule-box {
  position: absolute;
  box-sizing: border-box;
  width: 100%;
}
