/* components/keyboard/index.wxss */
.keyboard-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  background-color: rgba(0, 0, 0, 0.2);
}

.keyboard {
  width: 100vw;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: white;
  padding: 20rpx 10rpx;
  z-index: 100;
  box-shadow:0 0rpx 10rpx 2rpx rgba(0, 0, 0, 0.2);
  /* border-radius: 16rpx 16rpx 0 0; */
}

.keyboard .keyboard-action {
  color: #646566;
  font-size: 30rpx;
  display: flex;
  justify-content: flex-end;
  padding: 10rpx 20rpx 30rpx;
}

.keyboard .keyboard-action .confirm-btn {
  color: rgb(64, 127, 243);
}

.province-row:last-child {
  width: 61vw;
  margin: 0 auto
}

.province-row, .desc-row {
  display: flex;
  justify-content: space-around;
}

.province-row .province-item {
  text-align: center;
  line-height: calc((100vw - 20rpx - 120rpx) / 8);
  background-color: #f7f7f7;
  flex: 0 0 calc((100vw - 20rpx - 120rpx) / 8);
  height: calc((100vw - 20rpx - 120rpx) / 8); 
  margin-bottom: 16rpx;
  border-radius: 8rpx;
}

.desc-row .desc-item {
  text-align: center;
  line-height: calc((100vw - 10rpx - 120rpx) / 10);
  background-color: #f7f7f7;
  flex: 0 0 calc((100vw - 10rpx - 120rpx) / 10);
  height: calc((100vw - 10rpx - 120rpx) / 10); 
  margin-bottom: 16rpx;
  border-radius: 8rpx;
}

.desc-row .desc-item.del {
  color: white;
  padding: 0 32rpx;
  background-color: rgb(64, 127, 243);
  display: flex;
  align-items: center;
  justify-content: center;
}
