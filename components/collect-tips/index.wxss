/* components/collect-tips/index.wxss */
.collect-tips {
  font-size: 22rpx;
  color: white;
  position: fixed;
  right: 40rpx;
  z-index: 3000;
  background-color: rgba(0, 0, 0, 1);
  padding: 12rpx 26rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.collect-tips::after {
  content: "";
  width: 0px;
  height: 0px;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid rgba(0, 0, 0, 1);
  position: absolute;
  top: -10rpx;
  right: 80rpx;
}